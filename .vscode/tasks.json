{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ сборка активного файла",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++14",
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}/main.cpp", "${fileDirname}/constants.h",
				"${fileDirname}/rotor/rotor.h", "${fileDirname}/rotor/rotor.cpp",
				"${fileDirname}/reflector/reflector.h", "${fileDirname}/reflector/reflector.cpp",
				"${fileDirname}/io/io.h", "${fileDirname}/io/io.cpp",
				"${fileDirname}/enigma/enigma.h", "${fileDirname}/enigma/enigma.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.out"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "компилятор: /usr/bin/g++"
		}
	]
}